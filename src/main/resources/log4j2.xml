<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Appenders>
		<Console name="LogToConsole" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%t] (%C{1}:%L) %m%n</Pattern>
			</PatternLayout>
		</Console>
		<File name="derivansLog" fileName="${sys:user.home}/ulb-derivans.log">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%t] (%C{1}:%L) %m%n</Pattern>
			</PatternLayout>
		</File>
	</Appenders>

	<Loggers>
		<Logger name="de.ulb.digital.derivans" level="info" additivity="false">
			<AppenderRef ref="LogToConsole" level="info" />
			<AppenderRef ref="derivansLog" level="debug" />
		</Logger>
		<Root level="error">
			<AppenderRef ref="LogToConsole" />
		</Root>
	</Loggers>

</Configuration>
